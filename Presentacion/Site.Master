</head>
<body>
    <form runat="server" id="forSend">

   <%-- <asp:ScriptManager ID="ScriptManager1" runat="server">
        <Scripts> 
        <asp:ScriptReference Path="~/lib/jquery.min.js" />
         <asp:ScriptReference Path="~/js/scrollspy.min.js" />
