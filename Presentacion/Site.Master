    <link rel="stylesheet" href="~/css/mapa-styles.min.css"/>

    <!-- Galeria de animate -->
     <link href="css/animate.min.css" rel="stylesheet" />
    <!-- Galeria de imagenes -->
    <link rel="stylesheet" type="text/css" href="lib/fancybox/jquery.fancybox.css?v=2.1.5" media="screen" />
